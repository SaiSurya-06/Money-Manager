# üîê API CONFIGURATION TEMPLATE
# Copy this file to .env and add your actual API keys

# Alpha Vantage API (Get free key from https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Twelve Data API (Get from https://twelvedata.com/)
TWELVE_DATA_API_KEY=your_twelve_data_key_here

# IEX Cloud API (Get from https://iexcloud.io/)
IEX_CLOUD_API_KEY=your_iex_cloud_key_here

# Finnhub API (Get from https://finnhub.io/)
FINNHUB_API_KEY=your_finnhub_key_here

# API Settings
API_CACHE_TIMEOUT=300  # Cache API responses for 5 minutes
API_REQUEST_TIMEOUT=10  # Timeout for API requests in seconds
DEFAULT_CURRENCY=INR

# Rate Limiting
MAX_API_CALLS_PER_MINUTE=60
MAX_API_CALLS_PER_DAY=1000

# Fallback Settings
ENABLE_FALLBACK_APIS=true
USE_MOCK_DATA_IF_API_FAILS=true